<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.photoeditor.blendphotoeditor.blendermixer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.s">
        <activity android:name=".NAGYRHAGA_MainActivity"></activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_ad_id" />

        <activity
            android:name=".NAGYRHAGA_CropImageActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".NAGYRHAGA_MyCreationListPageActivity"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".NAGYRHAGA_MyCreationViewPageActivity"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".NAGYRHAGA_Policy"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".NAGYRHAGA_AddTextPageActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".NAGYRHAGA_GetAllStickerActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".NAGYRHAGA_CropImagePageActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".NAGYRHAGA_SecondEditPageActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".NAGYRHAGA_FirstEditPageActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".Splash"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>